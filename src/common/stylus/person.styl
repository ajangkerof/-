.person
  width 100%
  /* 登录注册 */
  .person_my
    width 100%
    height 80px
    background-color #ffee93
    .person_link
      width 100%
      height 100%
      box-sizing border-box
      padding-top 15px
      display block
      div
        float left
        clearFix()
      .person_img
        width 50px
        height 50px
        margin 0 10px
        line-height 50px
        text-align center
        border-radius 100%
        background-color rgba(200,200,200,1)
        .icon-wode
          font-size 42px
      .person_info
        p
          font-size 13px
        .person_login
          margin 5px 0
          font-size 18px
          color #82b5d4
      .person_to
        float right
        margin-top 15px
        margin-right 10px
        .icon-you
          font-size 20px
          color #82b5d4
  /* 账户信息 */
  .person_data
    width 100%
    background-color white
    border 1px solid #e4e4e4
    .data_list
      clearFix()
      li
        float left
        width 33%
        text-align center
        border-right 1px solid #f1f1f1
        a
          width 100%
          display block
          .link_top
            display block
            width 100%
            margin 10px 0
            font-size 14px
            color #333
            span
              display inline-block
              font-size 30px
              color orangered
              font-weight 700
              line-height 30px
          .link_bottom
            display block
            font-size 13px
            margin-bottom 5px
      li:nth-of-type(2)
        .link_top
          span
            color red
      li:nth-of-type(3)
        .link_top
          span
            color #6ac20b
  /* 用户操作 */
  .person_menu
    margin-top 20px
    background #fff
    .my_order
      display flex
      align-items center
      padding-left 15px
      >span
        font-size 24px
        color #82b5d4
        margin-right 5px
      .icon-jifenshangcheng
        color #ff5f3e
      .icon-vip
        color #f90
      .icon-kefu
        color darkred
      .order_title
        width 100%
        border-bottom 1px solid #e4e4e4
        padding 18px 10px 18px 0
        color #333
        display flex
        justify-content space-between
        span
          font-size 16px
          margin-top 2px
          display block
        .icon-you
          color #82b5d4
          font-size 10px
          margin-top 5px
