.order
  width 100%
  /* 搜索 */
  .order_search
    width 100%
    height 45px
    background-color #ffee93
    text-align center
    line-height 45px
    input
      width 95%
      height 30px
      padding 0 5px
      border-radius 5px
      caret-color dodgerblue
      outline none
    input::-webkit-input-placeholder
      color orange

  /* 登陆 */
  .order_login
    padding-top 140px
    width 60%
    margin 0 auto
    text-align center
    img
      display block
      width 100%
      height 30%
    h3
      padding 10px 0
      font-size 17px
      font-weight bold
      color #6a6a6a
    button
      display inline-block
      background #4cb4e7
      font-size 14px
      color #fff
      border 0
      outline none
      border-radius 5px
      padding 10px 20px
      box-shadow 0 0 8px 2px #ade
  /* 订单 */
  .order_content
    width 100%
    height 712px
    overflow hidden
    .content_ul
      width 90%
      margin-left 5%
      margin-bottom 60px
      .model
        width 100%
        height 6px
      .model1
        width 100%
        height 1px
      .content_li
        width 100%
        height 130px
        margin-bottom 6px
        background-color #fff
        border-radius 10px
        box-shadow 0 0 8px 2px #eee
        .li_top
          width 90%
          height 16%
          margin-left 10px
          padding 2%
          line-height 25px
          border-bottom 1px solid rgba(0, 0, 0, 0.1)
          .top_left
            float left
            .icon-shucai
              color #00b43c
              font-size 18px
            .shop_name
              font-size 16px
              font-weight bold
          .top_right
            float right
            font-size 12px
        .li_middle
          width 96%
          height 40%
          margin-left 3%
          margin-top 2%
          .order_img, .order_detail
            float left
          .order_img
            width 50px
            height 50px
          .order_detail
            margin-left 5px
            span
              display block
              font-size 12px
              font-family sans-serif
              margin 6px 0
        .li_bottom
          width 100%
          height 30%
          .order_detail, .order_next
            width 70px
            height 20px
            margin-top 2%
            float right
            line-height 20px
            text-align center
            border 1px solid rgba(0, 0, 0, 0.2)
            border-radius 8px
            margin-right 2%
            font-size 14px
