.order
  width 100%
  .order_search
    width 100%
    height 45px
    background-color #ffee93
    text-align center
    line-height 45px
    input
      width 95%
      height 30px
      padding 0 5px
      border-radius 5px
      caret-color dodgerblue
      outline none
    input::-webkit-input-placeholder
      color orange
  .order_login
    padding-top 140px
    width 60%
    margin 0 auto
    text-align center
    >img
      display block
      width 100%
      height 30%
    >h3
      padding 10px 0
      font-size 17px
      color #6a6a6a
    >button
      display inline-block
      background #4cb4e7
      font-size 14px
      color #fff
      border 0
      outline none
      border-radius 5px
      padding 10px 20px
