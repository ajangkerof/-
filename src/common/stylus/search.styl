.search
  width 100%
  .search_form
    width 100%
    height 45px
    background-color #ffee93
    text-align center
    line-height 45px
    .search_input
      width 75%
      height 30px
      padding 0 5px
      border-radius 15px
      font-size 16px
      caret-color dodgerblue
      outline none
    .search_input::-webkit-input-placeholder
      color orange
    .search_submit
      width 20%
      height 30px
      border-radius 2px
      background-color #82b5d4
      color white
      outline none
  .search_hot
    height 100px
    margin-top 20px
    .hot_title
      display block
      margin-bottom 5px
      margin-left 5px
      font-size 13px
    ul
      li
        height 20px
        float left
        margin 5px
        padding 2px
        background-color rgba(231,231,231,0.5)
        span
          font-size 12px
        .iconfont
          font-size 15px
          font-weight bold
        .icon-shucai
          color green
        .icon-kouzhao
          color lightskyblue
        .icon-yao
          color deepskyblue

