/* 滑块 */
.nav
  width 100%
  height 200px
  border-bottom 1px solid whitesmoke
  margin-top 45px
  background-color white
  .swiper-container
    width 100%
    height 100%
    .swiper-wrapper
      width 100%
      height 100%
      .swiper-slide
        display flex
        justify-content center
        align-items flex-start
        flex-wrap wrap
        .item_type
          width 25%
          .item_type_container
            display block
            width 100%
            margin-bottom 10px
            text-align center
            img
              display inline-block
              width 50px
              height 50px
          span
            display block
            text-align center
            font-size 13px
    .swiper-pagination
      bottom 6px
      >span.swiper-pagination-bullet-active
        background #82b5d4
/* 列表 */
.list
  margin-top 10px
  background-color white
  border-top 1px solid whitesmoke
  .list_header
    padding 10px 10px 0
    span
      color #7194a4
      font-size 20px
    .list_header_title
      font-size 16px

